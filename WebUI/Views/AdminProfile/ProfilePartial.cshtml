@model EntityLayer.Concrete.Admin

<div class="col-md-3">

    <!-- Profile Image -->
    <div class="card card-primary card-outline">
        <div class="card-body box-profile">
            <div class="text-center">
                <img class="profile-user-img img-fluid img-circle"
                     src="@Model.AdminImage"
                     alt="User profile picture">
            </div>

            <h3 class="profile-username text-center">@Model.UserName</h3>

            <p class="text-muted text-center">@Model.AdminTitle</p>

            <ul class="list-group list-group-unbordered mb-3">
                <li class="list-group-item">
                    <b>Yazılan Blog Sayısı:</b> <a class="float-right">@ViewBag.BlogCount</a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
    <!-- About Me Box -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Hakkımda</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <strong><i class="fas fa-book mr-1"></i> Telefon Numarası</strong>

            <p class="text-muted">
                @Model.AdminPhoneNumber
            </p>

            <hr>

            <strong><i class="fas fa-map-marker-alt mr-1"></i> Doğum Tarihi</strong>

            <p class="text-muted">@(((DateTime)Model.DateOfBirth).ToString("dd-MMM-yyyy"))</p>

            <hr>

            @*<strong><i class="fas fa-pencil-alt mr-1"></i> Skills</strong>

            <p class="text-muted">
                <span class="tag tag-danger">UI Design</span>
                <span class="tag tag-success">Coding</span>
                <span class="tag tag-info">Javascript</span>
                <span class="tag tag-warning">PHP</span>
                <span class="tag tag-primary">Node.js</span>
            </p>

            <hr>*@

            <strong><i class="far fa-file-alt mr-1"></i> Hakkımda</strong>

            <p class="text-muted">@Model.AdminAbout</p>
            
            <hr>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>

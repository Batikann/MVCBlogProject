@model List<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "AdminMyBlog";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@{
    string color = "";
    string text = "";
    string progressbar = "";
    int puan;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Projects</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>


</head>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="card">
            <div class="card-body p-0">
                <table class="table table-striped projects" id="myTable">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                ID
                            </th>
                            <th style="width: 20%">
                                Blog Başlığı
                            </th>
                            <th style="width: 20%">
                                Blog Puanı
                            </th>
                            <th style="width: 8%" class="text-center">
                                Durumu
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            puan = item.BlogRating * 10;
                            if (puan >= 80)
                            {
                                color = "badge badge-success";
                                text = "Çok İyi";
                                progressbar = "progress-bar bg-success";
                            }

                            if (puan < 80 && puan >= 60)
                            {
                                color = "badge badge-warning";
                                text = "Orta";
                                progressbar = "progress-bar bg-warning";
                            }

                            if (puan >= 10 && puan < 60)
                            {
                                color = "badge badge-danger";
                                text = "Kötü";
                                progressbar = "progress-bar bg-danger";
                            }
                            <tr>
                                <td>@item.BlogID</td>
                                <td>
                                    <a>
                                        @item.BlogTitle
                                    </a>
                                    <br />
                                    <small>
                                        @(((DateTime)item.BlogDate).ToString("dd-MMM-yyyy"))
                                    </small>
                                </td>
                                <td class="project_progress">
                                    <div class="progress progress-sm">
                                        <div class="@progressbar" role="progressbar" aria-valuenow="8" aria-valuemin="0" aria-valuemax="100" style="width: @puan%">
                                        </div>
                                    </div>
                                    <small>
                                        Ortalama Puan:@item.BlogRating
                                    </small>
                                </td>
                                <td class="project-state">
                                    <span class="@color">@text</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="#">
                                        <i class="fas fa-folder">
                                        </i>
                                        Sitede Gör
                                    </a>
                                    <a class="btn btn-info btn-sm" href="#">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Güncelle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="#">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.card-body -->
        <!-- /.card -->

    </section>

</body>
</html>
<a href="/AdminBlog/AdminAddBlog/" class="btn btn-success">Yeni Blog Ekle</a>
<script>
    $('#myTable').dataTable({});
</script>


@model List<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "AdminMyBlog";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@{
    string color = "";
    string text = "";
    string progressbar = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Projects</title>


</head>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="card">
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                ID
                            </th>
                            <th style="width: 20%">
                                Blog Başlığı
                            </th>
                            <th style="width: 20%">
                                Blog Puanı
                            </th>
                            <th style="width: 8%" class="text-center">
                                Durumu
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.BlogRating >= 8)
                            {
                                color = "badge badge-success";
                                text = "Çok İyi";
                                progressbar = "progress-bar bg-success";
                            }

                            if (item.BlogRating < 8 && item.BlogRating >= 6)
                            {
                                color = "badge badge-warning";
                                text = "Orta";
                                progressbar = "progress-bar bg-warning";
                            }

                            if (item.BlogRating > 1 && item.BlogRating <= 6)
                            {
                                color = "badge badge-danger";
                                text = "Kötü";
                                progressbar = "progress-bar bg-danger";
                            }
                            <tr>
                                <td>@item.BlogID</td>
                                <td>
                                    <a>
                                        @item.BlogTitle
                                    </a>
                                    <br />
                                    <small>
                                        @(((DateTime)item.BlogDate).ToString("dd-MMM-yyyy"))
                                    </small>
                                </td>
                                <td class="project_progress">
                                    <div class="progress progress-sm">
                                        <div class="@progressbar" role="progressbar" aria-valuenow="8" aria-valuemin="0" aria-valuemax="100" style="width: 80%">
                                        </div>
                                    </div>
                                    <small>
                                        Ortalama Puan:@item.BlogRating
                                    </small>
                                </td>
                                <td class="project-state">
                                    <span class="@color">@text</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="#">
                                        <i class="fas fa-folder">
                                        </i>
                                        Sitede Gör
                                    </a>
                                    <a class="btn btn-info btn-sm" href="#">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Güncelle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="#">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.card-body -->
        <!-- /.card -->

    </section>
    <!-- /.content -->

</body>
</html>


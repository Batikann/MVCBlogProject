@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "AdminBlogList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
<br />
<table id="myTable" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>BlogID</th>
            <th> Başlık</th>
            <th>Tarih</th>
            <th>Kategori</th>
            <th>Yazar</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
            <th>Yorumlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BlogID</td>
                <td>@item.BlogTitle</td>
                <td>@item.BlogDate.ToLongDateString()</td>
                <td>@item.Category.CategoryName</td>
                <td>@item.Admin.UserName</td>
                <td><a href="#" class="btn btn-danger">Sil</a></td>
                <td><a href="/AdminBlog/AdminUpdateBlog/@item.BlogID" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Blog/BlogDetails/@item.BlogID" class="btn btn-primary">Detaylar</a></td>
                <td><a href="/AdminComment/GetCommentByBlog/@item.BlogID" class="btn btn-info">Yorumlar</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/AdminBlog/AdminAddBlog/" class="btn btn-success">Yeni Blog Ekle</a>
<script>
    $('#myTable').dataTable({});
</script>


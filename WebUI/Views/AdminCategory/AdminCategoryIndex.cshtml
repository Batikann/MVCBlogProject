@model List<EntityLayer.Concrete.Category>
@{
    ViewBag.Title = "AdminCategoryIndex";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@{
    string status = "";
    string color = "";
    string status2 = "";
    string icon = "";
    string color2 = "";
}
<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->

        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Projects</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%" class="text-center">

                                ID

                            </th>

                            <th style="width: 20%" class="text-center">

                                Kategori Adı

                            </th>

                            <th style="width: 30%" class="text-center">

                                Son Blog

                            </th>

                            @*<th>

                                    Project Progress

                                </th>*@

                            <th style="width: 8%" class="text-center">

                                Durumu

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    @foreach (var item in Model)
                    {
                        if (item.CategoryStatus == false)
                        {
                            status = "Pasif";
                            color = "badge badge-danger";
                            status2 = "Aktif Yap";
                            color2 = "btn btn-danger btn-sm";
                            icon = "fas fa-eye-slash";
                        }
                        if (item.CategoryStatus == true)
                        {
                            status = "Aktif";
                            color = "badge badge-success";
                            status2 = "Pasif Yap";
                            color2 = "btn btn-success btn-sm";
                            icon = "fas fa-eye";
                        }

                        <tbody>
                            <tr>
                                @*<div class="modal" id="Modal2">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h2 class="modal-title"> Kategori Güncelleme Paneli</h2>
                                            </div>
                                            <form action="/AdminCategory/UpdateCategory/@item.CategoryID" method="post">
                                                <div class="modal-body">
                                                    <label>Kategori ID</label>
                                                    <input type="text" name="CategoryID" class="form-control" value="@item.CategoryID" />
                                                    <br />
                                                    <label>Kategori Adı</label>
                                                    <input type="text" name="CategoryName" class="form-control" value="@item.CategoryName" />
                                                    <br />
                                                    <label>Kategori Açıklaması</label>
                                                    <input type="text" name="CategoryExplanation" class="form-control" value="@item.CategoryName" />
                                                    <br />
                                                    <button class="btn btn-primary">Ekle</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>*@
                            </tr>
                            <tr>

                                <td>

                                    @item.CategoryID

                                </td>

                                <td class="text-center">

                                    <a>

                                        @item.CategoryName

                                    </a>

                                    <br />

                                    @*<small>

                                            Created 01.01.2019

                                        </small>*@

                                </td>

                                <td class="text-center">

                                    <ul class="list-inline">

                                        <li class="list-inline-item">

                                            <img alt="Avatar" class="table-avatar" src="/AdminLTE-3.0.4/dist/img/avatar.png">

                                        </li>
                                    </ul>

                                </td>



                                <td class="project-state">

                                    <span class="@color">@status</span>

                                </td>

                                <td class="project-actions text-right">

                                    <a class="btn btn-primary btn-sm" href="#">

                                        <i class="fas fa-folder">

                                        </i>

                                        Yazılar

                                    </a>


                                    <a class="btn btn-info btn-sm" href="/AdminCategory/UpdateCategory/@item.CategoryID/">

                                            <i class="fas fa-pencil-alt">

                                            </i>

                                            Güncelle

                                        </a>
                                    @*<button class="btn btn-info btn-sm" data-target="#Modal2" data-toggle="modal">Güncelle</button>*@

                                    <a class="@color2" href="/AdminCategory/ChangeStatusCategory/@item.CategoryID">

                                        <i class="@icon">

                                        </i>

                                        @status2

                                    </a>

                                </td>

                            </tr>

                        </tbody>
                    }

                </table>
                <br />
                <button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
                    Yeni Kategori Ekle
                </button>
                <div class="modal" id="Modal1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h2 class="modal-title">Yeni Kategori Ekleme Paneli</h2>
                            </div>
                            <form action="/AdminCategory/AdminAddCategory/" method="post">
                                <div class="modal-body">
                                    <label>Kategori Adı</label>
                                    <input type="text" name="CategoryName" class="form-control" />
                                    <br />
                                    <label>Kategori Açıklaması</label>
                                    <input type="text" name="CategoryExplanation" class="form-control" />
                                    <br />
                                    <button class="btn btn-primary">Ekle</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <br />

            </div>



        </div>

        <!-- /.card -->

    </section>

</body>

</html>


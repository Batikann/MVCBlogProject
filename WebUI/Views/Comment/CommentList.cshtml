@model IEnumerable<EntityLayer.Concrete.Comment>


<div class="pt-5">
    <h3 class="mb-5">Yorumlar</h3>
    <ul class="comment-list">
        @foreach (var item in Model)
        {
            <li class="comment">
                <div class="vcard">
                    <img src="~/Templates/miniblog/miniblog/images/vector-type-flat-2.png" alt="Image placeholder">
                </div>
                <div class="comment-body">
                    <h3>@item.UserName</h3>
                    <div class="meta">@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</div>
                    <p>@item.CommentText</p>
                    @*<p><a href="#" class="reply rounded">Reply</a></p>*@
                </div>
            </li>
        }
    </ul>
    @Html.Action("LeaveComment", "Comment")
</div>


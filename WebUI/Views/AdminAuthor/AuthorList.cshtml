@model List<EntityLayer.Concrete.Admin>
@{
    ViewBag.Title = "AuthorList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">

    <!-- Site wrapper -->

    <div class="wrapper">

        <!-- Navbar -->
        <!-- Main content -->

        <section class="content">

            <!-- Default box -->

            <div class="card card-solid">

                <div class="card-body pb-0">

                    <div class="row d-flex align-items-stretch">
                        @foreach (var item in Model)
                        {
                            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">


                                <div class="card bg-light">

                                    <div class="card-header text-muted border-bottom-0">

                                        @item.AdminTitle

                                    </div>

                                    <div class="card-body pt-0">

                                        <div class="row">

                                            <div class="col-7">

                                                <h2 class="lead"><b>@item.UserName</b></h2>

                                                <p class="text-muted text-sm"><b>Hakkımda: </b> @item.AdminAbout </p>

                                                <ul class="ml-4 mb-0 fa-ul text-muted">

                                                    <br />  
                                                    <li class="small"><span class="fa-li"><i class="fas fa-lg fa-envelope"></i></span>@item.AdminMail</li>
                                                    <br />
                                                    <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span>@item.AdminPhoneNumber</li>

                                                </ul>

                                            </div>

                                            <div class="col-5 text-center">

                                                <img src="@item.AdminImage" alt="" class="img-circle img-fluid">

                                            </div>

                                        </div>

                                    </div>

                                    <div class="card-footer">

                                        <div class="text-right">

                                            <a href="#" class="btn btn-sm bg-teal">

                                                <i class="fas fa-align-justify"></i> Yazarın Blogları

                                            </a>

                                            <a href="#" class="btn btn-sm btn-primary">

                                                <i class="fas fa-user"></i> Profili Görüntüle

                                            </a>

                                        </div>

                                    </div>

                                </div>


                            </div>
                        }
                    </div>

                </div>

            </div>

            <!-- /.card -->

        </section>

        <!-- /.content -->

    </div>

    <!-- /.control-sidebar -->

</body>

</html>


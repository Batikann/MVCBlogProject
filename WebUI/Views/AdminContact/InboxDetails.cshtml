@model EntityLayer.Concrete.Contact
@{
    ViewBag.Title = "InboxDetails";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">



    <!-- Content Header (Page header) -->

    <section class="content-header">

        <div class="container-fluid">

            <div class="row mb-2">

                <div class="col-sm-6">

                    <h1>Mesaj Detayları</h1>

                </div>



            </div>

        </div><!-- /.container-fluid -->

    </section>

    <!-- Main content -->

    <section class="content">

        <div class="container-fluid">

            <div class="row">

                <div class="col-md-3">

                    <a href="/AdminContact/Inbox/" class="btn btn-primary btn-block mb-3">Gelen Kutusuna Dön</a>

                    @Html.Action("InboxPartial", "AdminContact")


                </div>

                <!-- /.col -->

                <div class="col-md-9">

                    <div class="card card-primary card-outline">

                        @*<div class="card-header">

                                <h3 class="card-title">Mesaj Detayları</h3>

                                <div class="card-tools">

                                    <a href="#" class="btn btn-tool" data-toggle="tooltip" title="Previous"><i class="fas fa-chevron-left"></i></a>

                                    <a href="#" class="btn btn-tool" data-toggle="tooltip" title="Next"><i class="fas fa-chevron-right"></i></a>

                                </div>

                            </div>*@

                        <!-- /.card-header -->

                        <div class="card-body p-0">

                            <div class="mailbox-read-info">

                                <h4>@Model.Subject</h4>
                                <br />

                                <h6>

                                    Gönderen Mail Adresi:  @Model.Mail
                                    <br />
                                    <br />
                                    Adı Soyadı: @Model.FirstName @Model.LastName


                                    <span class="mailbox-read-time float-right">@(((DateTime)Model.ContactDate).ToString("dd-MMM-yyyy")) @(((DateTime)Model.ContactDate).ToShortTimeString())</span>

                                </h6>

                            </div>

                            <br />

                            <div class="mailbox-read-message">

                                <p>

                                    @Model.Message

                                </p>

                            </div>

                            <!-- /.mailbox-read-message -->

                        </div>

                        <!-- /.card-body -->

                        <div class="card-footer">


                            <button type="button" class="btn btn-default"><i class="far fa-trash-alt"></i> Sil</button>


                        </div>

                        <!-- /.card-footer -->

                    </div>

                    <!-- /.card -->

                </div>

                <!-- /.col -->

            </div>

            <!-- /.row -->

        </div>

    </section>

</body>

</html>

